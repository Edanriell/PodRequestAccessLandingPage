@page "/"

<PageTitle>Pod request access</PageTitle>

<section
	class="request-access" >
	<div
		class="request-access__content" >
		<h1
			class="request-access__title request-access__title--color--screen-glow" >
			Publish your podcasts
			<span
				class="request-access__title--color--white" >
				everywhere.
			</span>
		</h1>
		<p
			class="request-access__text" >
			Upload your audio to Pod with a single click. We’ll then distribute your podcast to Spotify, Apple Podcasts, Google Podcasts, Pocket Casts and more!
		</p>
		<div
			class="partners-list request-access__partners-list" >
			<img
				alt="Spotify company logotype"
				class="partners-list__spotify"
				src="/images/svg/companies/spotify.svg" />
			<img
				alt="Apple podcast company logotype"
				class="partners-list__apple"
				src="/images/svg/companies/apple-podcast.svg" />
			<img
				alt="Google podcasts company logotype"
				class="partners-list__google"
				src="/images/svg/companies/google-podcasts.svg" />
			<img
				alt="Pocket casts company logotype"
				class="partners-list__pocket"
				src="/images/svg/companies/pocket-casts.svg" />
		</div>
		<div
			class="request-access__gain-access-form-wrapper" >
			<GainAccess />
		</div>
	</div>
</section>